@using PortfolioProject.Models
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section id="container">
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Über mich
                    </div>
                    <div style="overflow-y: auto;">
                        <table class="table table-bordered" >
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Überschrift</th>
                                    <th>Beschreibung1</th>
                                    <th>Beschreibung2</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Adresse</th>
                                    <th>Telefon</th>
                                    <th>Bild</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Heading</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Description</td>
                                    <td>@item.Name </td>
                                    <td>@item.Email</td>
                                    <td>@item.Addresse</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Image</td>
                                    <td><a href="/About/DeleteAbout/@item.ID" class="btn btn-outline-danger"><i class="fa fa-remove"> Löschen</i></a></td>
                                    <td><a href="/About/UpdateAbout/@item.ID" class="btn btn-outline-success"><i class="fa fa-upload"> Update</i></a></td>
                                </tr>
                                }


                            </tbody>
                        </table>

                    </div>

                </div>
                <a href="/About/AddAbout" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill">  Hinzufügen</i></a>
            </div>
        </section>
        <!-- footer -->
        <!-- / footer -->
    </section>

    <!--main content end-->
</section>
